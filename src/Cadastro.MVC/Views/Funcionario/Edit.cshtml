                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="EnderecoComercial.Complemento" class="control-label"></label>
                            <input asp-for="EnderecoComercial.Complemento" class="form-control" />
                            <span asp-validation-for="EnderecoComercial.Complemento" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">

                        <div class="form-group">
                            <label asp-for="EnderecoComercial.Bairro" class="control-label"></label>
                            <input asp-for="EnderecoComercial.Bairro" class="form-control" />
                            <span asp-validation-for="EnderecoComercial.Bairro" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="EnderecoComercial.Cidade" class="control-label"></label>
                            <input asp-for="EnderecoComercial.Cidade" class="form-control" />
                            <span asp-validation-for="EnderecoComercial.Cidade" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="EnderecoComercial.UF" class="control-label"></label>
                            
                            <select asp-for="EnderecoComercial.UF" class="form-select">
                                <option value="" disabled selected>Selecione uma UF</option>
                                <option value="SP">SP - São Paulo</option>
                                <option value="AC">AC - Acre</option>
